.searchTabr {
  background-color: #fff;
  padding: 25rpx 10rpx;
}
button::after {
  border: none;
}
.searchAdvice {
  background-color: #fff;
}
.searchAdvice .searchAdviceBtn {
  padding-left: 20rpx;
  padding-left: 0 !important;
  padding-right: 0 !important;
  margin-right: 0 !important;
  margin-left: 0 !important;
  border-radius: 0;
}
.searchAdvice .searchAdviceBtn .searchAdviceicon {
  display: flex;
  justify-content: center;
  align-items: center;
}
.searchAdvice .searchAdviceText {
  font-size: 25rpx;
  border-bottom: 1rpx solid #e9eaec;
}
.searchAdvice .searchAdviceTextPrompt {
  padding-left: 25rpx;
  color: #ff4757;
  font-size: 25rpx;
  border-bottom: 1rpx solid #e9eaec;
}
.searchHistory {
  width: 100%;
  background-color: #fff;
  padding: 10rpx 50rpx 25rpx 50rpx;
  box-sizing: border-box;
}
.searchHistory .HistoryRecord {
  font-size: 25rpx;
}
.searchHistory .detBtn {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.searchHistory .detBtn .detBtnbox {
  background-color: #fff;
  padding-left: 0 !important;
  padding-right: 0 !important;
  margin-right: 0 !important;
  margin-left: 0 !important;
  border-radius: 0;
}
.searchHistoryList {
  box-sizing: border-box;
}
.searchHistoryList .searchHistorybox {
  display: flex;
  flex-wrap: wrap;
}
.searchHistoryList .searchHistorybox .historyTextBg {
  font-size: 25rpx;
  color: black;
  margin: 10rpx 10rpx 0rpx 10rpx;
  padding: 15rpx;
  border-radius: 15rpx;
  background-color: #f1f2f6;
}
.playBtnList {
  width: 100%;
  font-weight: lighter;
  box-sizing: border-box;
  margin: 20rpx;
}
.playAllBtnImg {
  display: flex;
  align-items: center;
  font-weight: lighter;
}
.playAllBtnImg .playBtn {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}
.col_box {
  box-sizing: border-box;
  width: 100%;
}
.col_box .musicNamebox {
  display: flex;
}
.col_box .showAuthorityImgBtn {
  display: flex;
  color: #d5dadf;
  margin: 5rpx;
  font-size: 20rpx;
}
.col_box .showAuthorityImgBtn .musname {
  text-overflow: ellipsis;
  overflow: hidden;
}
.col_box .musicAuthor {
  color: #d5dadf;
  margin: 5rpx;
  font-size: 20rpx;
}

