.background-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  -webkit-filter: blur(60rpx) brightness(50%);
          filter: blur(60rpx) brightness(50%);
  z-index: -1;
  -webkit-transform: scale(1.5);
          transform: scale(1.5);
}
.play-wrapper {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.play-wrapper .Music_Info {
  display: flex;
  justify-content: center;
  align-items: center;
}
.play-wrapper .Music_name {
  color: #fff;
}
.play-wrapper .Music_author {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: rgba(255, 255, 255, 0.3);
}
.play_middle {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 816rpx;
  box-sizing: border-box;
}
.play_middle .body-record {
  -webkit-transform-origin: 21.5% 12%;
          transform-origin: 21.5% 12%;
  transition: -webkit-transform 0.8s ease 0s;
  transition: transform 0.8s ease 0s;
  transition: transform 0.8s ease 0s, -webkit-transform 0.8s ease 0s;
  position: absolute;
  width: 190rpx;
  height: 270rpx;
  top: 10%;
  left: 45%;
  z-index: 101;
}
.play_middle .round-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 630rpx;
  height: 630rpx;
}
.play_middle .round-container .round_img {
  position: absolute;
  width: 530rpx;
  height: 530rpx;
  z-index: 100;
}
.play_middle .round-container .singer-img {
  width: 480rpx;
  height: 480rpx;
  border-radius: 50%;
}
.play_middle .round-container .run {
  -webkit-animation: myRotate 20s linear infinite;
          animation: myRotate 20s linear infinite;
}
@-webkit-keyframes myRotate {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
25% {
    -webkit-transform: rotate(90deg);
            transform: rotate(90deg);
}
50% {
    -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
}
75% {
    -webkit-transform: rotate(270deg);
            transform: rotate(270deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes myRotate {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
25% {
    -webkit-transform: rotate(90deg);
            transform: rotate(90deg);
}
50% {
    -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
}
75% {
    -webkit-transform: rotate(270deg);
            transform: rotate(270deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
.play-foot {
  position: fixed;
  width: 750rpx;
  height: 250rpx;
  bottom: 0;
}
.play-foot .page-slider {
  display: flex;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  justify-content: space-evenly;
  align-items: center;
}
.play-foot .slider_middle {
  width: 65%;
}
.play-foot .play_suspend .AudioImg {
  display: flex;
  justify-content: center;
  align-items: center;
}
.play-foot .play_suspend .AudioImg .icon_play {
  width: 80rpx;
  height: 80rpx;
}
.play-foot .play_suspend .AudioImg .img_play {
  width: 100rpx;
  height: 100rpx;
}

