.body-view {
  width: 100%;
  height: 100%;
}
.background-bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  -webkit-filter: blur(60rpx) brightness(50%);
          filter: blur(60rpx) brightness(50%);
  -webkit-transform: scale(1.5);
          transform: scale(1.5);
  z-index: -1;
}
.play-wrapper {
  height: 12%;
  padding: 10rpx;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  align-items: center;
}
.play-wrapper .Music_name {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-right: 50rpx;
}
.play-wrapper .Music_name .musicname {
  margin-top: 10rpx;
  color: #efefef;
}
.play-wrapper .Music_name .singerName {
  margin-top: 5rpx;
  font-size: 25rpx;
  color: rgba(255, 255, 255, 0.3);
}
.play_middle {
  height: 68%;
  box-sizing: border-box;
  overflow: hidden;
}
.play_middle .Scoop {
  position: absolute;
  top: 12%;
  left: 45%;
  height: 300rpx;
  z-index: 10001;
}
.play_middle .Scoop .body-record {
  -webkit-transform-origin: 18% 10%;
          transform-origin: 18% 10%;
  transition: -webkit-transform 0.8s ease 0s;
  transition: transform 0.8s ease 0s;
  transition: transform 0.8s ease 0s, -webkit-transform 0.8s ease 0s;
  height: 300rpx;
  width: 220rpx;
}
.play_middle .round-container {
  position: absolute;
  left: 15%;
  top: 23%;
}
.play_middle .round-container .round_img {
  height: 520rpx;
  width: 520rpx;
}
.play_middle .round-container .singer-img {
  position: absolute;
  border-radius: 50%;
  height: 420rpx;
  width: 420rpx;
  top: 50rpx;
  left: 12%;
  z-index: -1;
}
.play-foot {
  height: 20%;
  position: fixed;
  width: 750rpx;
  height: 250rpx;
  bottom: 0;
}
.play-foot .page-slider {
  display: flex;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  justify-content: space-evenly;
  align-items: center;
}
.play-foot .slider_middle {
  width: 65%;
}
.play-foot .play_suspend .AudioImg {
  display: flex;
  justify-content: center;
  align-items: center;
}
.play-foot .play_suspend .AudioImg .icon_play {
  width: 80rpx;
  height: 80rpx;
}
.play-foot .play_suspend .AudioImg .img_play {
  width: 100rpx;
  height: 100rpx;
}
.run {
  -webkit-animation: myRotate 20s linear infinite;
          animation: myRotate 20s linear infinite;
}
@-webkit-keyframes myRotate {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
25% {
    -webkit-transform: rotate(90deg);
            transform: rotate(90deg);
}
50% {
    -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
}
75% {
    -webkit-transform: rotate(270deg);
            transform: rotate(270deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes myRotate {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
25% {
    -webkit-transform: rotate(90deg);
            transform: rotate(90deg);
}
50% {
    -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
}
75% {
    -webkit-transform: rotate(270deg);
            transform: rotate(270deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}

